<% layout('layouts/boilerplate') %>

  <div class="row">
    <div class="col-md-6 offset-md-3 mt-5">
      <div class="card shadow">
        <div class="card-body">
          <h4 class="card-title text-center">Register</h4>
          <form action="/register" class="validated-form" method="POST" novalidate>
            <div class="mb-3">
              <label class="form-label" for="username">Username</label>
              <input class="form-control" type="text" id="username" name="username" autofocus required />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="email">Email</label>
              <input class="form-control" type="email" id="email" name="email" required />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="password">Password</label>
              <input class="form-control" type="password" id="password" name="password" required />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="d-grid"><button class="btn btn-success mt-3">Register</button></div>
          </form>
        </div>
      </div>
    </div>
  </div>